<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">#FE547A</item>
        <item name="colorPrimaryDark">#8971C9</item>
        <item name="colorAccent">#FF4771</item>
        <item name="android:statusBarColor">#8971C9</item>
        <item name="android:navigationBarColor">#8971C9</item>
    </style>
    <style name="Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">#FE547A</item>
        <item name="colorPrimaryDark">#8971C9</item>
        <item name="colorAccent">#FF4771</item>
        <item name="android:statusBarColor">#00FF0000</item>
        <item name="android:navigationBarColor">#00ff0000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>